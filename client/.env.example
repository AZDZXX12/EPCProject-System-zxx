# EPC项目管理系统 - 环境变量配置示例
# 复制此文件为 .env.local 并填入实际值

# ==================== 基础配置 ====================
# 应用名称
REACT_APP_NAME=EPC项目管理系统

# 应用版本
REACT_APP_VERSION=2.0.0

# 运行环境 (development | production | test)
NODE_ENV=development

# ==================== API配置 ====================
# 后端API地址
# 开发环境: http://localhost:8000
# 生产环境: https://your-backend-domain.com
REACT_APP_API_URL=http://localhost:8000

# API超时时间（毫秒）
REACT_APP_API_TIMEOUT=10000

# API重试次数
REACT_APP_API_RETRY=2

# ==================== 功能开关 ====================
# 是否启用Mock数据（开发环境建议true）
REACT_APP_USE_MOCK=false

# 是否启用调试模式
REACT_APP_DEBUG=true

# 是否启用性能监控
REACT_APP_ENABLE_MONITORING=false

# ==================== 第三方服务 ====================
# Sentry DSN（错误监控）
REACT_APP_SENTRY_DSN=

# Google Analytics ID
REACT_APP_GA_ID=

# ==================== 安全配置 ====================
# CSRF Token名称
REACT_APP_CSRF_HEADER=X-CSRFToken

# Session超时时间（分钟）
REACT_APP_SESSION_TIMEOUT=30

# ==================== 文件上传 ====================
# 最大文件大小（MB）
REACT_APP_MAX_FILE_SIZE=10

# 允许的文件类型
REACT_APP_ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.xls,.xlsx,.jpg,.png

# ==================== 其他配置 ====================
# 默认语言
REACT_APP_DEFAULT_LANG=zh-CN

# 是否启用PWA
REACT_APP_ENABLE_PWA=false

# 构建路径（用于子目录部署）
PUBLIC_URL=/
